{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/model.schema.json",
  "title": "Predictive Detection Engineering - Model Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "model_id",
    "name",
    "version",
    "status",
    "model_type",
    "target",
    "horizon",
    "inputs",
    "training",
    "output",
    "evaluation",
    "drift_monitoring"
  ],
  "properties": {
    "model_id": { "type": "string", "minLength": 3 },
    "name": { "type": "string", "minLength": 5 },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "status": { "type": "string", "enum": ["draft", "experimental", "production"] },

    "model_type": {
      "type": "string",
      "enum": ["forecasting", "anomaly_scoring", "classification", "risk_scoring", "other"]
    },

    "target": { "type": "string", "minLength": 1 },
    "horizon": { "type": "string", "minLength": 1 },

    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["data_sources", "features"],
      "properties": {
        "data_sources": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "features": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "field": { "type": "string" },
              "aggregation": { "type": "string" },
              "window": { "type": "string" }
            }
          }
        }
      }
    },

    "training": {
      "type": "object",
      "additionalProperties": false,
      "required": ["window", "cadence", "method"],
      "properties": {
        "window": { "type": "string" },
        "cadence": { "type": "string" },
        "method": { "type": "string" },
        "notes": { "type": "string" }
      }
    },

    "output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "fields"],
      "properties": {
        "type": { "type": "string", "enum": ["score", "forecast", "label"] },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    },

    "evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["metrics", "backtest_window"],
      "properties": {
        "metrics": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "backtest_window": { "type": "string" },
        "baseline_comparison": { "type": "string" }
      }
    },

    "drift_monitoring": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signals", "cadence", "actions"],
      "properties": {
        "signals": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "cadence": { "type": "string" },
        "actions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    }
  }
}

