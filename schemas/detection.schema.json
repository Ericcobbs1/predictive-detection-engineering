{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/detection.schema.json",
  "title": "Predictive Detection Engineering - Detection Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "version",
    "status",
    "description",
    "detection_type",
    "predictive_readiness",
    "severity",
    "log_source",
    "data_sources",
    "query",
    "false_positives",
    "triage",
    "tuning",
    "references",
    "tags"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 3 },
    "name": { "type": "string", "minLength": 5 },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "status": { "type": "string", "enum": ["draft", "experimental", "production"] },
    "owner": { "type": "string" },
    "description": { "type": "string", "minLength": 10 },

    "detection_type": { "type": "string", "enum": ["reactive", "predictive_adjacent", "predictive"] },
    "predictive_readiness": { "type": "string", "enum": ["reactive_only", "predictive_adjacent", "predictive_ready"] },

    "severity": { "type": "string", "enum": ["informational", "low", "medium", "high", "critical"] },

    "log_source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["platform", "product", "category"],
      "properties": {
        "platform": { "type": "string", "minLength": 1 },
        "product": { "type": "string", "minLength": 1 },
        "category": { "type": "string", "minLength": 1 }
      }
    },

    "data_sources": {
      "type": "array",
      "items": { "type": "string" }
    },

    "query": {
      "type": "object",
      "additionalProperties": false,
      "required": ["language", "text"],
      "properties": {
        "language": {
          "type": "string",
          "enum": ["sigma", "spl", "kql", "eql", "yaral", "lucene", "python", "other"]
        },
        "text": { "type": "string", "minLength": 1 }
      }
    },

    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "field": { "type": "string" },
          "aggregation": { "type": "string" },
          "window": { "type": "string" }
        }
      }
    },

    "prediction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": { "type": "string" },
        "horizon": { "type": "string" },
        "method": { "type": "string" }
      }
    },

    "alert_condition": { "type": "string" },

    "false_positives": {
      "type": "array",
      "items": { "type": "string" }
    },

    "triage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["steps"],
      "properties": {
        "steps": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "tuning": {
      "type": "object",
      "additionalProperties": false,
      "required": ["knobs"],
      "properties": {
        "knobs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "references": {
      "type": "array",
      "items": { "type": "string" }
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },

  "allOf": [
    {
      "if": {
        "properties": { "detection_type": { "const": "predictive" } },
        "required": ["detection_type"]
      },
      "then": {
        "required": ["prediction", "features", "alert_condition"],
        "properties": {
          "prediction": {
            "required": ["target", "horizon", "method"]
          },
          "features": {
            "minItems": 1
          },
          "alert_condition": { "minLength": 5 }
        }
      }
    }
  ]
}
