{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NextSigma Detection Schema (Phase 2 MVP)",
  "type": "object",
  "required": [
    "title",
    "id",
    "version",
    "status",
    "type",
    "description",
    "entity",
    "windows",
    "features",
    "conditions",
    "outputs"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3
    },
    "id": {
      "type": "string",
      "pattern": "^NS-P2-[0-9]{3,}$"
    },
    "version": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["experimental", "stable", "deprecated"]
    },
    "type": {
      "type": "string",
      "enum": ["predictive", "correlation", "anomaly"]
    },
    "created": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "logsource": {
      "type": "object",
      "properties": {
        "category": { "type": "string" },
        "product": { "type": "string" }
      },
      "additionalProperties": true
    },
    "entity": {
      "type": "object",
      "required": ["type", "field"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["host", "user", "ip"]
        },
        "field": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "windows": {
      "type": "object",
      "required": ["baseline", "observation", "bucket"],
      "properties": {
        "baseline": { "type": "string" },
        "observation": { "type": "string" },
        "bucket": { "type": "string" }
      }
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "conditions": {
      "type": "object",
      "required": ["all"],
      "properties": {
        "all": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "op"],
            "properties": {
              "id": { "type": "string" },
              "op": { "type": "string" },
              "left": {},
              "right": {},
              "field": { "type": "string" },
              "buckets": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "scoring": {
      "type": "object",
      "properties": {
        "risk": {
          "type": "object",
          "properties": {
            "scale": { "type": "string" },
            "weights": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        },
        "confidence": {
          "type": "object",
          "properties": {
            "scale": { "type": "string" },
            "contributors": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        }
      },
      "additionalProperties": true
    },
    "time_horizon": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["then"],
            "properties": {
              "if": { "type": "string" },
              "then": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

 